.list-group
  - questions.each do |question|
    .list-group-item
      %h5= link_to question.title, view_lawyers_question_answers_path(question)
      %div= truncate(question.body, length: 150)
      %div
        %b Status: #{question.status.capitalize}
      %small.text-muted
        Category: #{question.category}
      .mt-2
        - if question.open?
          = link_to "Answer", new_lawyers_question_answer_path(question), class: 'btn btn-primary'
