.list-group
  - questions.each do |question|
    .list-group-item
      %h5= question.title
      %p= question.status
      %small.text-muted
        Category: #{question.category}
      %p.text-gray-800= truncate(question.body, length: 150)
      - if question.open?
        .mt-2
          = link_to "Answer", new_lawyers_question_answer_path(question), class: 'btn btn-primary'
      .mt-2
        = link_to "Show", view_lawyers_question_answers_path(question), class: 'btn btn-primary'