= link_to "View Open Questions", lawyers_questions_path, class: 'btn btn-primary'
= render 'common/question_details', question: @question
= form_with model: [:lawyers, @question, @answer] do |f|
  .mt-2
    = f.label :response_text, "Your Legal Advice"
    = f.text_area :response_text, class: 'form-control', required: true
  .mt-2
    = f.label :proposed_fee, "Proposed Fee (Â£)"
    = f.number_field :proposed_fee, step: 1.0, class: 'form-control', required: true
  .mt-2
    = f.submit "Submit Answer", class: 'btn btn-primary btn-block'
